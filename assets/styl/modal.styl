.modal
  display: none
  position: fixed
  z-index: 1000
  left: 0
  top: 0
  width: 100%
  height: 100%
  overflow: auto

  .modal-content
    background-color: color-gray-light
    margin: 15% auto
    padding: 20px
    border: 1px solid color-gray-dark
    width: 40%
    color: color-gray-dark

    .close
      color: color-gray
      float: right
      font-weight: bold

      &:hover,
      &:focus
        color: color-gray-dark
        text-decoration: none
        cursor: pointer

.shortcuts-help ul
  padding: 0 30px
  li
    span
      display: inline-block
      float: right
